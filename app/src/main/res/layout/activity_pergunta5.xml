<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pergunta5"
    android:background="@color/creme">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"/>

    <TextView
        android:id="@+id/pergunta5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Como criar um mÃ©todo em Java?"
        android:fontFamily="sans-serif-medium"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <RelativeLayout
        android:id="@+id/respostasLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/pergunta5">

        <Button
            android:id="@+id/resp1"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:text="metodoExemplo."
            android:textSize="25sp"
            tools:ignore="HardcodedText"
            android:onClick="onClickOpcaoErrada"/>

        <Button
            android:id="@+id/resp2"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:text="(metodoExemplo)"
            android:textSize="25sp"
            android:layout_below="@+id/resp1"
            android:layout_marginTop="25dp"
            android:onClick="onClickOpcaoErrada"/>

        <Button
            android:id="@+id/resp3"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:text="metodoExemplo[]"
            android:textSize="25sp"
            android:layout_below="@+id/resp2"
            android:layout_marginTop="25dp"
            android:onClick="onClickOpcaoErrada"/>

        <Button
            android:id="@+id/resp4"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:text="metodoExemplo()"
            android:textSize="25sp"
            android:layout_below="@+id/resp3"
            android:layout_marginTop="25dp"
            android:onClick="onClickOpcaoCerta"/>

    </RelativeLayout>

</RelativeLayout>