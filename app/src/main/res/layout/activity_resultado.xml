<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resultado"
    android:background="@color/offWhite">

    <TextView
        android:id="@+id/textoFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="score"
        android:fontFamily="sans-serif-medium"
        android:textSize="35sp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="110dp"/>

    <TextView
        android:id="@+id/numAcertos"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:layout_below="@+id/textoFinal"
        android:layout_toLeftOf="@+id/relacaoAoTodo"/>

    <TextView
        android:id="@+id/relacaoAoTodo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/5"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:layout_below="@+id/textoFinal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reiniciar quiz"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="25dp"
        android:paddingHorizontal="35dp"
        android:paddingVertical="15dp"
        android:textSize="25sp"
        android:backgroundTint="@color/vermelho"
        android:onClick="onClickReiniciar"/>

</RelativeLayout>