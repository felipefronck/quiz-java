<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPerguntas"
    android:background="@color/offWhite">

    <TextView
        android:id="@+id/pergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="question"
        android:fontFamily="sans-serif-medium"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/respostasLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="50dp">

        <Button
            android:id="@+id/resp1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="resp1"
            android:textSize="25sp"
            android:backgroundTint="@color/azul"/>

        <Button
            android:id="@+id/resp2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="resp2"
            android:textSize="25sp"
            android:layout_below="@+id/resp1"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/azul"/>

        <Button
            android:id="@+id/resp3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="resp3"
            android:textSize="25sp"
            android:layout_below="@+id/resp2"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/azul"/>

        <Button
            android:id="@+id/resp4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="resp4"
            android:textSize="25sp"
            android:layout_below="@+id/resp3"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/azul"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/barraProgresso"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/respostasLayout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="155dp"
        android:max="100" />

</RelativeLayout>